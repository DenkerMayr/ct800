<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.denkmayr.andreas.ct800_client.FarmerFragment"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="80dp"
    android:id="@+id/constraintLayout">

    <EditText
        android:layout_width="321dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:text="BeispielstraÃŸe"
        android:ems="10"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="233dp"
        android:id="@+id/etFarmerAdress"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toBottomOf="@+id/etFarmerResidence"
        android:layout_marginTop="32dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toLeftOf="@+id/etFarmerStreetNumber"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="0" />

    <EditText
        android:layout_width="379dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="94dp"
        android:id="@+id/etFarmerEmail"
        android:text="email.example@gmail.com"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toBottomOf="@+id/etFartmerName"
        android:layout_marginTop="32dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="0" />

    <EditText
        android:layout_width="291dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:text="Beispielstadt"
        android:ems="10"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="161dp"
        android:id="@+id/etFarmerResidence"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toBottomOf="@+id/etFarmerEmail"
        android:layout_marginTop="32dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toLeftOf="@+id/etFarmerZip"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="0" />

    <EditText
        android:layout_width="49dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        tools:layout_editor_absoluteX="346dp"
        tools:layout_editor_absoluteY="233dp"
        android:id="@+id/etFarmerStreetNumber"
        android:text="23"
        android:hint="street number"
        app:layout_constraintTop_toBottomOf="@+id/etFarmerResidence"
        android:layout_marginTop="32dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="0" />

    <EditText
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        tools:layout_editor_absoluteX="315dp"
        tools:layout_editor_absoluteY="161dp"
        android:id="@+id/etFarmerZip"
        android:text="12345"
        app:layout_constraintTop_toBottomOf="@+id/etFarmerEmail"
        android:layout_marginTop="32dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="0" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="321dp"
        android:id="@+id/btFarmerSave"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/etFarmerAdress"
        android:layout_marginTop="48dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toLeftOf="@+id/btFarmerCancel"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="0" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="321dp"
        android:id="@+id/btFarmerCancel"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/etFarmerAdress"
        android:layout_marginTop="48dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toLeftOf="@+id/toggleFarmerEditMode"
        android:layout_marginEnd="56dp"
        tools:layout_constraintRight_creator="0" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="307dp"
        tools:layout_editor_absoluteY="321dp"
        android:id="@+id/toggleFarmerEditMode"
        app:layout_constraintTop_toBottomOf="@+id/etFarmerAdress"
        android:layout_marginTop="48dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Vorname Nachname"
        android:ems="10"
        android:gravity="center_horizontal"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="16dp"
        android:id="@+id/etFartmerName"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        android:layout_marginTop="16dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        tools:layout_constraintRight_creator="0" />

</android.support.constraint.ConstraintLayout>
