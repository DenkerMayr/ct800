<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.denkmayr.andreas.ct800_client.FarmerFragment"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilFartmerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        android:layout_marginTop="16dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        tools:layout_constraintRight_creator="0">
        <EditText
            android:id="@+id/etFartmerName"
            android:layout_width="215dp"
            android:layout_height="42dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="textPersonName"
            android:text="@string/exampleName"
            android:hint="@string/hintFarmerName"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="11dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilFarmerEmail"
        android:layout_width="299dp"
        android:layout_height="60dp"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="86dp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toBottomOf="@+id/tilFartmerName"
        android:layout_marginTop="16dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="0">
        <EditText
            android:id="@+id/etFarmerEmail"
            android:layout_width="299dp"
            android:layout_height="48dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="textEmailAddress"
            android:text="@string/exampleEmail"
            android:hint="@string/hintFarmerEmail"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="11dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilFarmerResidence"
        android:layout_width="291dp"
        android:layout_height="60dp"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="178dp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toBottomOf="@+id/tilFarmerEmail"
        android:layout_marginTop="32dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toLeftOf="@+id/tilFarmerZip"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="0">
        <EditText
            android:layout_width="291dp"
            android:layout_height="48dp"
            android:id="@+id/etFarmerResidence"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/exampleResidency"
            android:hint="@string/hintFarmerResidence"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="11dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilFarmerZip"
        android:layout_width="80dp"
        android:layout_height="60dp"
        tools:layout_editor_absoluteX="296dp"
        tools:layout_editor_absoluteY="178dp"
        app:layout_constraintTop_toBottomOf="@+id/tilFarmerEmail"
        android:layout_marginTop="32dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="8dp"
        tools:layout_constraintRight_creator="0">
        <EditText
            android:id="@+id/etFarmerZip"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:ems="10"
            android:inputType="number"
            android:text="@string/exampleZip"
            android:hint="@string/hintFarmerZip"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="11dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilFarmerStreet"
        android:layout_width="300dp"
        android:layout_height="60dp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="270dp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toBottomOf="@+id/tilFarmerResidence"
        android:layout_marginTop="32dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toLeftOf="@+id/tilFarmerStreetNumber"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="0">
        <EditText
            android:id="@+id/etFarmerStreet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/exampleStreet"
            android:hint="@string/hintFarmerStreet"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="11dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilFarmerStreetNumber"
        android:layout_width="70dp"
        android:layout_height="60dp"
        tools:layout_editor_absoluteX="327dp"
        tools:layout_editor_absoluteY="270dp"
        app:layout_constraintTop_toBottomOf="@+id/tilFarmerResidence"
        android:layout_marginTop="32dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="8dp"
        tools:layout_constraintRight_creator="0">
        <EditText
            android:id="@+id/etFarmerStreetNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="number"
            android:text="@string/exampleStreetNumber"
            android:hint="@string/hintFarmerStreetNumber"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="11dp" />
    </android.support.design.widget.TextInputLayout>

    <ToggleButton
        android:id="@+id/toggleFarmerEditMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="354dp"
        app:layout_constraintTop_toBottomOf="@+id/tilFarmerStreet"
        android:layout_marginTop="24dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="0" />

    <Button
        android:id="@+id/btFarmerSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="354dp"
        app:layout_constraintTop_toBottomOf="@+id/tilFarmerStreet"
        android:layout_marginTop="24dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toLeftOf="@+id/btFarmerCancel"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="0" />

    <Button
        android:id="@+id/btFarmerCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="354dp"
        app:layout_constraintTop_toBottomOf="@+id/tilFarmerStreet"
        android:layout_marginTop="24dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toLeftOf="@+id/toggleFarmerEditMode"
        android:layout_marginEnd="56dp"
        tools:layout_constraintRight_creator="0" />

    <Button
        android:id="@+id/btFarmerPopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/changeFarmer"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="439dp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        tools:layout_constraintRight_creator="0"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        android:layout_marginBottom="24dp"
        tools:layout_constraintBottom_creator="0" />

</android.support.constraint.ConstraintLayout>
